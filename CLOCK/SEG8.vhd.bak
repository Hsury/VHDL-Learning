LIBRARY IEEE;
USE IEEE.STD_LOGIC_1164.ALL;
USE IEEE.STD_LOGIC_UNSIGNED.ALL;

ENTITY SEG8 IS
	PORT (DATA : IN INTEGER RANGE 0 TO 9;
	      DP : IN STD_LOGIC;
	      BAR : OUT STD_LOGIC_VECTOR (7 DOWNTO 0));
END SEG8;

ARCHITECTURE BEHAV OF SEG8 IS
BEGIN
	WITH DATA SELECT
	BAR <= (NOT DP) & "1000000" WHEN 0,
	       (NOT DP) & "1111001" WHEN 1,
	       (NOT DP) & "0100100" WHEN 2,
	       (NOT DP) & "0110000" WHEN 3,
	       (NOT DP) & "0011001" WHEN 4,
	       (NOT DP) & "0010010" WHEN 5,
	       (NOT DP) & "0000010" WHEN 6,
	       (NOT DP) & "1111000" WHEN 7,
	       (NOT DP) & "0000000" WHEN 8,
	       (NOT DP) & "0010000" WHEN 9,
	       "11111111" WHEN OTHERS;
END BEHAV;